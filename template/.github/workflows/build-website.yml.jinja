name: Build website

on:
  push:
    branches:
      - main

# Limit token permissions for security
permissions: read-all

jobs:
  build-website:
    {% if workshop_type == 'general' -%}
    uses: seedcase-project/.github/.github/workflows/reusable-build-docs.yml@main
    {% else if workshop_type == 'r' -%}
    uses: rostools/.github/.github/workflows/reusable-build-website-r.yml@main
    {%- endif %}
    secrets:
      netlify-token: {{ '${{ secrets.NETLIFY_AUTH_TOKEN }}' }}
      # This is to allow using `gh` CLI
      github-token: {{ '${{ secrets.GITHUB_TOKEN }}' }}
