project:
  type: rostools-theme
  # TODO: Uncomment if you want to use slides.
  # pre-render:
    # - quarto render slides/*.qmd
  # resources:
  #   - slides/*.html

book:
  # TODO: Fill in the title.
  title: ""
  # TODO: Add more authors if needed.
  author:
    - name: {{ author_first_name }} {{ author_last_name }}
      affiliation: ""
      orcid: ""

  date: last-modified
  repo-url: https://github.com/{{ github_repo_spec }}
  site-url: {{ workshop_url }}
  body-header: {{ '"{{< text_snippet wip >}}"' }}
  chapters:
    - index.qmd
    - part: "Overview"
      chapters:
        - overview/syllabus.qmd
        - overview/is-this-for-you.qmd
        - overview/schedule.qmd
        - overview/learning-design.qmd
    - part: "Pre-workshop"
      chapters:
        - pre-workshop/overview.qmd
        {% if workshop_type == "r" -%}
        - pre-workshop/installing-programs-r.qmd
        - pre-workshop/installing-r-packages.qmd
        {%- endif %}
        - pre-workshop/code-of-conduct.qmd
        - pre-workshop/survey.qmd
    - part: "Sessions"
      chapters:
        - sessions/introduction.qmd
        - sessions/session.qmd
        - sessions/conclusion.qmd
  appendices:
    - appendix/for-teachers.qmd
    - appendix/references.qmd
    - CONTRIBUTING.md
    - LICENSE.md
  page-footer:
    center:
      - text: "License: CC BY 4.0 {{ '{{< fa brands creative-commons >}}' }} {{ '{{< fa brands creative-commons-by >}}' }}"
        href: LICENSE.md
      - text: "Code of Conduct"
        href: "pre-workshop/code-of-conduct.qmd"

format:
  rostools-theme-html: default

editor:
  markdown:
    wrap: 72
    canonical: true

metadata-files:
  - _metadata.yml
